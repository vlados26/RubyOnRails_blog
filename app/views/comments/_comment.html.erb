<% content_for(:title, "Comments") %>

<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <p>
    <%= link_to "Delete Comment", [comment.post, comment],
    data: { method: :delete, confirm: "Are you sure?" } %>
  </p>
<% end %>
